local plr = game.Players.LocalPlayer
local chr = plr.Character or plr.CharacterAdded:Wait()
local cam = workspace.CurrentCamera
local dmg = true
local TweenService = game:GetService("TweenService")

---====== Define spawner ======---

local Spawner = loadstring(game:HttpGet("https://raw.githubusercontent.com/RegularVynixu/Utilities/main/Doors/Entity%20Spawner/V1/Source.lua"))()

---====== Create entity ======---

local entity = Spawner.createEntity({
    CustomName = "SilenceMovings",
    Model = "rbxassetid://111215333080443", -- Your entity's model url here ("rbxassetid://1234567890" or GitHub raw url)
    Speed = 30,
    MoveDelay = 0,
    HeightOffset = 0,
    CanKill = false,
    KillRange = 40,
    SpawnInFront = false,
    ShatterLights = true,
    FlickerLights = {
        Enabled = false,
        Duration = 20
    },
    Cycles = {
        Min = 1,
        Max = 1,
        Delay = 1
    },
    CamShake = {
        Enabled = true,
        Values = {1, 2, 3, 4},
        Range = 200
    },
    ResistCrucifix = false,
    BreakCrucifix = true,
    DeathMessage = {"You died to who called Silence", "He doesnt like loud noisies", "Dont make noise near him", "You can do it!", "Try better next times!"},
    IsCuriousLight = true
})

---====== Debug ======---

entity.Debug.OnEntitySpawned = function()
    print("Entity has spawned")
game.Lighting.MainColorCorrection.TintColor = Color3.fromRGB(0, 0, 0)
game.Lighting.MainColorCorrection.Contrast = 10
local tween = game:GetService("TweenService")
tween:Create(game.Lighting.MainColorCorrection, TweenInfo.new(2.5), {Contrast = 0}):Play()
local TweenService = game:GetService("TweenService")
local TW = TweenService:Create(game.Lighting.MainColorCorrection, TweenInfo.new(5),{TintColor = Color3.fromRGB(48, 48, 48)})
TW:Play()
end

entity.Debug.OnEntityDespawned = function()
    print("Entity has despawned")
dmg = false
game.Lighting.MainColorCorrection.TintColor = Color3.fromRGB(48, 48, 48)
game.Lighting.MainColorCorrection.Contrast = 0
local tween = game:GetService("TweenService")
tween:Create(game.Lighting.MainColorCorrection, TweenInfo.new(2.5), {Contrast = 0}):Play()
local TweenService = game:GetService("TweenService")
local TW = TweenService:Create(game.Lighting.MainColorCorrection, TweenInfo.new(5),{TintColor = Color3.fromRGB(255, 255, 255)})
TW:Play()

---====== Load achievement giver ======---
local achievementGiver = loadstring(game:HttpGet("https://raw.githubusercontent.com/RegularVynixu/Utilities/main/Doors/Custom%20Achievements/Source.lua"))()

---====== Display achievement ======---
achievementGiver({
    Title = "Silentness",
    Desc = "Keep quiet or die",
    Reason = "Encounter Silence",
    Image = "rbxassetid://110132629184669"
})
end

entity.Debug.OnEntityStartMoving = function()
    print("Entity started moving")
end

entity.Debug.OnEntityFinishedRebound = function()
    print("Entity finished rebound")
end

entity.Debug.OnEntityEnteredRoom = function(room)
    print("Entity entered room: Lastest", room)
if not chr:GetAttribute("Crouching") and dmg == true then
local plr = game.Players.LocalPlayer
local chr = plr.Character or plr.CharacterAdded:Wait()

local Camera = workspace.CurrentCamera
local RunService = game:GetService("RunService")
local lockOn = game.Workspace:WaitForChild("SilenceMovings"):FindFirstChildWhichIsA("BasePart")
local C = game.Players.LocalPlayer.Character:WaitForChild("Collision")
C.Anchored = true
lockOn.Anchored = false
lockOn.CanCollide = true
lockOn.CFrame = lockOn.CFrame * CFrame.new(0,1,0)

local a = game:GetService("RunService").RenderStepped:Connect(function()
	Camera.CFrame = CFrame.lookAt(Camera.CFrame.Position, lockOn.Position)
end)
wait(3)
game.Lighting.MainColorCorrection.TintColor = Color3.fromRGB(48, 48, 48)
game.Lighting.MainColorCorrection.Contrast = 0
local tween = game:GetService("TweenService")
tween:Create(game.Lighting.MainColorCorrection, TweenInfo.new(2.5), {Contrast = 0}):Play()
local TweenService = game:GetService("TweenService")
local TW = TweenService:Create(game.Lighting.MainColorCorrection, TweenInfo.new(3),{TintColor = Color3.fromRGB(0, 0, 0)})
TW:Play()
wait(5)
replicatesignal(game.Players.LocalPlayer.Kill)

firesignal(game.ReplicatedStorage.RemotesFolder.DeathHint.OnClientEvent, {"You died to who you call Silence...","When it came to the current room it will kill you if you dont crouch","I believe in you!"},"Blue")
        	game.ReplicatedStorage.GameStats["Player_".. game.Players.LocalPlayer.Name].Total.DeathCause.Value = "Silence"

screenGui:Destroy()
a:Disconnect()
lockOn:Destroy()
game.Workspace.SilenceMovings:Destroy()
game.Lighting.MainColorCorrection.TintColor = Color3.fromRGB(0, 0, 0)
game.Lighting.MainColorCorrection.Contrast = 0
local tween = game:GetService("TweenService")
tween:Create(game.Lighting.MainColorCorrection, TweenInfo.new(2.5), {Contrast = 0}):Play()
local TweenService = game:GetService("TweenService")
local TW = TweenService:Create(game.Lighting.MainColorCorrection, TweenInfo.new(3),{TintColor = Color3.fromRGB(255, 255, 255)})
TW:Play()
end
end

entity.Debug.OnLookAtEntity = function()
    print("Player looking at entity")
end

entity.Debug.OnDeath = function()
    print("Player has died")
end

--[[
    NOTE: By overwriting 'OnUseCrucifix', the default crucifixion will be ignored and this function will be called instead

    entity.Debug.OnUseCrucifix = function()
        print("Custom crucifixion script here")
    end
]]--

---====== Run entity ======---

Spawner.runEntity(entity)
