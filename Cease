local Players = game:GetService("Players")
local player = Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local humanoid = char:WaitForChild("Humanoid")

local spawner = loadstring(game:HttpGet("https://raw.githubusercontent.com/Voorproo/Fogroom/refs/heads/main/Helooo"))()

local entity = spawner.Create({
	Entity = {
		Name = "Cease",
		Asset = "https://github.com/DoorsHubs/Tutorial/raw/refs/heads/main/cEASE.rbxm",
		HeightOffset = 0.1
	},
	Lights = {
		Flicker = {
			Enabled = false,
			Duration = 1
		},
		Shatter = false,
		Repair = false
	},
	Earthquake = {
		Enabled = false
	},
	CameraShake = {
		Enabled = true,
		Range = 100,
		Values = {1, 1.5, 2, 2.5} -- Magnitude, Roughness, FadeIn, FadeOut
	},
	Movement = {
		Speed = 60,
		Delay = 0,
		Reversed = false
	},
	Rebounding = {
		Enabled = false,
		Type = "Ambush",
		Min = 2,
		Max = 2.5,
		Delay = 0.4
	},
	Damage = {
		Enabled = false,
		Range = 86,
		Amount = 0.01
	},
	Crucifixion = {
		Enabled = false,
		Range = 90,
		Resist = false,
		Break = true
	},
	Death = {
		Type = "Guiding", -- "Curious"
		Hints = {"You died to who called Cease", "Dont move when he appears"},
		Cause = ""
	}
})

---====== Debug entity ======---

entity:SetCallback("OnSpawned", function()
    print("Entity has spawned")
game.Lighting.MainColorCorrection.TintColor = Color3.fromRGB(255, 255, 255)
game.Lighting.MainColorCorrection.Contrast = 10
local tween = game:GetService("TweenService")
tween:Create(game.Lighting.MainColorCorrection, TweenInfo.new(2.5), {Contrast = 0}):Play()
local TweenService = game:GetService("TweenService")
local TW = TweenService:Create(game.Lighting.MainColorCorrection, TweenInfo.new(5),{TintColor = Color3.fromRGB(69, 72, 255)})
TW:Play()
end)

entity:SetCallback("OnStartMoving", function()
    print("Entity has started moving")
wait(3)
if humanoid.MoveDirection.Magnitude > 0 then
wait(12)
game.Players.LocalPlayer.Character.Humanoid.Health -= 1000
game.ReplicatedStorage.GameStats["Player_".. game.Players.LocalPlayer.Name].Total.DeathCause.Value = "Cease"
end
end)

entity:SetCallback("OnEnterRoom", function(room, firstTime)
    if firstTime == true then
        print("Entity has entered room: ".. room.Name.. " for the first time")
    else
        print("Entity has entered room: ".. room.Name.. " again")
    end
end)

entity:SetCallback("OnLookAt", function(lineOfSight)
		print("Player is looking at entity")
end)

entity:SetCallback("OnDespawning", function()
    print("Entity is despawning")
game.Lighting.MainColorCorrection.TintColor = Color3.fromRGB(69, 72, 255)
game.Lighting.MainColorCorrection.Contrast = 10
local tween = game:GetService("TweenService")
tween:Create(game.Lighting.MainColorCorrection, TweenInfo.new(2.5), {Contrast = 0}):Play()
local TweenService = game:GetService("TweenService")
local TW = TweenService:Create(game.Lighting.MainColorCorrection, TweenInfo.new(5),{TintColor = Color3.fromRGB(255, 256, 255)})
TW:Play()
end)

entity:SetCallback("OnDamagePlayer", function(newHealth)
	if newHealth == 0 then
		print("Entity has killed the player")
	else
		print("Entity has damaged the player")
end
end)

---====== Run entity ======---

entity:Run()
